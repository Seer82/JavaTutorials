public class Arrays {

	public static void main(String[] args) {

		int[] values;
		// here values is just a reference variable to an array

		values = new int[3];
		/*
		 * here we specify the size of the array object, in this case 3 elements
		 * from 0-2 Java gives every element in an array a default value of 0
		 * unless specified otherwise
		 */

		values[0] = 33; // assigning values to array elements
		values[1] = 66;
		values[2] = 99;

		for (int i = 0; i < values.length; i++) {
			System.out.println(values[i]);
			//iterating thorough array elements

		}

		int[] numbers = { 2, 4, 5, 6, 3 };
		// quicker way to initilise an array and assign values to array elements

		System.out.println(numbers[3]);

	}

}
